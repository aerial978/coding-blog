{
    "name": "mhath/coding-blog",
    "description": "A personal blog project built with PHP using a custom MVC architecture, without any framework.",
    "type": "project",
    "license": "MIT",
    "require": {},
    "require-dev": {
        "phpunit/phpunit": "11.5.23",
        "squizlabs/php_codesniffer": "^3.13",
        "friendsofphp/php-cs-fixer": "^3.76",
        "phpstan/phpstan": "^2.1",
        "phpmd/phpmd": "^2.15",
        "roave/security-advisories": "dev-latest"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
            }
    },
    "authors": [
        {
            "name": "aerial978",
            "email": "mhathier@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit",
        "lint": "phpcs",
        "lint:fix": "phpcbf",
        "cs:check": "php-cs-fixer fix --dry-run --diff",
  	    "cs:fix": "php-cs-fixer fix",
        "stan": "phpstan analyse",
        "md": "phpmd app text phpmd.xml",
        "check:quality": [
            "@cs:check",
            "@lint",
            "@stan",
            "@md"
        ]
    },
    "config": {
        "platform": {
            "php": "8.2.13"
        },
        "audit.abandoned": "report",
        "sort-packages": true,
        "preferred-install": "dist",
        "optimize-autoloader": true
    }
}
